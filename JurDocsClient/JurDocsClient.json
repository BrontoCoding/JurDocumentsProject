{
    "openapi": "3.0.1",
    "info": {
        "title": "JurDocsServer",
        "version": "1.0"
    },
    "paths": {
        "/api/GetListDocuments": {
            "get": {
                "tags": [ "GetListDocuments" ],
                "parameters": [
                    {
                        "name": "docName",
                        "in": "query",
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "array",
                                    "items": { "type": "string" }
                                }
                            },
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": { "type": "string" }
                                }
                            },
                            "text/json": {
                                "schema": {
                                    "type": "array",
                                    "items": { "type": "string" }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/GetListDocuments/getFile": {
            "get": {
                "tags": [ "GetListDocuments" ],
                "summary": "Получение файла",
                "description": "Получение файла",
                "parameters": [
                    {
                        "name": "docName",
                        "in": "query",
                        "description": "Документ",
                        "required": true,
                        "schema": { "type": "string" }
                    },
                    {
                        "name": "fileName",
                        "in": "query",
                        "description": "Имя файла",
                        "required": true,
                        "schema": { "type": "string" }
                    },
                    {
                        "name": "userId",
                        "in": "query",
                        "description": "ID пользователя",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int32"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "text/plain": { "schema": { "type": "boolean" } },
                            "application/json": { "schema": { "type": "boolean" } },
                            "text/json": { "schema": { "type": "boolean" } }
                        }
                    }
                }
            }
        },
        "/api/GetListDocuments/clearTemp": {
            "post": {
                "tags": [ "GetListDocuments" ],
                "summary": "Очистить каталог пользователя",
                "requestBody": {
                    "content": {
                        "application/json": { "schema": { "$ref": "#/components/schemas/ClearTempRequiest" } },
                        "text/json": { "schema": { "$ref": "#/components/schemas/ClearTempRequiest" } },
                        "application/*+json": { "schema": { "$ref": "#/components/schemas/ClearTempRequiest" } }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "text/plain": { "schema": { "type": "boolean" } },
                            "application/json": { "schema": { "type": "boolean" } },
                            "text/json": { "schema": { "type": "boolean" } }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ClearTempRequiest": {
                "type": "object",
                "properties": {
                    "userId": {
                        "type": "integer",
                        "format": "int32"
                    }
                },
                "additionalProperties": false
            }
        }
    }
}