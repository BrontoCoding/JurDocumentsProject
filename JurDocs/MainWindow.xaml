<Window x:Class="JurDocs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JurDocs"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel></StackPanel>
        <StackPanel Orientation="Horizontal">
            
        <Button DockPanel.Dock="Top" Margin="5" Padding="10" >Договоры</Button>
        <Button Margin="5" Padding="10" >Справки</Button>
        <Button Margin="5" Padding="10" >Выписки</Button>
        </StackPanel>
        <DataGrid>
            <DataGrid.Columns>
                <DataGridTextColumn Header="aaa1"></DataGridTextColumn>
                <DataGridTextColumn Header="aaa2"></DataGridTextColumn>
                <DataGridTextColumn Header="aaa3"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>        
    </StackPanel>
</Window>
